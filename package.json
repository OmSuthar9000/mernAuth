{
  "name": "mern-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "client:start": "npm run start --prefix client",
    "client:build": "npm run build --prefix client",
    "client:install": "npm install --prefix client",
    "server:start": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "install": "npm install",
    "build": "npm run client:build && npm run server:build",
    "client:build": "npm run build --prefix client",
    "server:build": "echo 'No build command for server yet'"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^2.0.15"  // Useful for backend development
  },
  "devDependencies": {
    "concurrently": "^7.0.0"  // Runs both client and server in parallel
  }
}
