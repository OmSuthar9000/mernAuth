{
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "server/dist"  
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server/dist/$1"  
    }
  ]
}
