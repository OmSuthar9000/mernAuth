{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",  // Assuming the client (React) is in the 'client' folder
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "client/dist"  // Adjust the path to 'client/dist' (Vite's default build output)
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"  // Route frontend requests to the dist folder
    }
  ]
}
