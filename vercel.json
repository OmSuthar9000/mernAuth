{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "client/dist"
      }
    },
    {
      "src": "server/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",                 
      "dest": "client/dist/$1"
    },
    {
      "src": "/api/(.*)",             
      "dest": "server/api/$1"
    }
  ]
}
